<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cautiousdrive.com.cautiousdrive.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/traffic_cong"
            android:layout_width="160dp"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/traffic_cong" />

        <ImageButton
            android:id="@+id/traffic_lights"
            android:layout_width="160dp"
            android:layout_marginLeft="40dp"
            android:onClick="onClick"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/traffic_lights" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="200dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_proneZone"
            android:layout_width="160dp"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/high_accident_zone" />
        <ImageButton
            android:id="@+id/accident"
            android:onClick="onClick"
            android:layout_width="160dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/accident" />

    </LinearLayout>

</LinearLayout>
